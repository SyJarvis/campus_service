.tools{
    margin-top: 10rpx;
    display: flex;
    width: 100%;
    height: 130rpx;
    background-color: #fff;
    justify-content: center;
}

.tools .scan{
    margin-right: 20rpx;
}

.tools .folder{
    margin-left: 20rpx;
}
.tools .scan image{
    width: 80rpx;
    height: 80rpx;
    display: block;
}

.tools .member image{
    width: 80rpx;
    height: 80rpx;
    display: block;
}
.tools .folder image{
    width: 80rpx;
    height: 80rpx;
    display: block;
}
.tools text{
    display: block;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    font-size: 25rpx;
}