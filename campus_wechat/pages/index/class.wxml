<view class="container">
    <view class="cu-bar search bg-white">
        <view class="search-form round">
            <text class="cuIcon-search"></text>
            <input type="text" placeholder="搜索" confirm-type="search"></input>
        </view>
        <view class="action">
            <button class="cu-btn text-white shadow-blur round" size="mini" style="background-color: #002fa7;">搜索</button>
        </view>
    </view>
    <view class="tools">
        <view class="scan" bindtap='getScancode'>
            <image src="/images/scan.png" mode="scaleToFill"></image>
            <text>扫一扫</text>
        </view>
        <view class="member">
            <image src="/images/member.png" mode="scaleToFill"></image>
            <text>成员</text>
        </view>
        <view class="folder">
            <image src="/images/folder.png" mode="scaleToFill"></image>
            <text>文件</text>
        </view>
    </view>
    <view wx:if="{{result !=''}}">
        <view>扫码的内容:{{result}}</view>
    </view>


</view>